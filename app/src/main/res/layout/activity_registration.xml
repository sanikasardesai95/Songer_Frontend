<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginback"
        tools:context=".RegistrationActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:hint="Username"
            android:background="@drawable/editcircular"
            android:ems="10"
            android:padding="12dp"
            android:id="@+id/username"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="85dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="84dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/email" app:layout_constraintVertical_chainStyle="packed"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:padding="12dp"
            android:background="@drawable/editcircular"
            android:ems="10"
            android:id="@+id/email" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/username" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/phone"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPhonetic"
            android:hint="Mobile"
            android:ems="10"
            android:padding="12dp"
            android:background="@drawable/editcircular"
            android:id="@+id/phone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/email"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/pwd"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:padding="12dp"
            android:background="@drawable/editcircular"
            android:id="@+id/pwd" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="83dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="86dp" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/phone"/>
    <Button
            android:text="Register"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="148dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/pwd"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>